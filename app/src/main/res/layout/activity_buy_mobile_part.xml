<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cell_bg"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:text="Buy Mobile Part"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/price_button1" />

    <AutoCompleteTextView
        android:id="@+id/mob_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Mobile Brand"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/model_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mob_brand"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:hint="Model Number"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/mob_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/model_num"
        android:layout_below="@+id/model_num"
        android:layout_marginTop="71dp"
        android:ems="10"
        android:hint="Mobile Part"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <Button
        android:id="@+id/price_button1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mob_part"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:text="Find price"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>
    </ScrollView>
